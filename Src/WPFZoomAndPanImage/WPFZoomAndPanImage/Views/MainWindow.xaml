<Window
    x:Class="WPFZoomAndPanImage.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFZoomAndPanImage.Controls"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <controls:ZoomBorder
            x:Name="border"
            Background="Gray"
            ClipToBounds="True">
            <Image Source="lena.png" />
        </controls:ZoomBorder>

    </Grid>
</Window>
